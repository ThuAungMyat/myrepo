
@{
    ViewBag.Title = "Index";
}

<h2>Index  @ViewBag.sampleData <button class="btn btn-success" onclick="addAlbum()">Add New</button></h2>



<div id="albumList"></div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModal-label" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div id="Album">
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(function () {
            bindList();
        });

        function addAlbum() {
            AlbumForm("Add", 0)
        }
        function EditForm(e) {
            var ID = $(e).attr('data-albumID');
            AlbumForm("Edit", ID)
        }

        function AlbumForm(FormType, ID) {
                $.ajax({
                    cache: false,
                    url: '@Url.Action("_AlbumForm", "Album")',
                    data: { FormType: FormType, ID: ID },
                    beforeSend: function () {

                    },
                    success: function (myData) {
                        $('#Album').empty().append(myData);
                    },
                    complete: function () {
                        $('#myModal').modal('show');

                        $.ajax({
                            cache: false,
                            url: '@Url.Action("getArtistListData", "Artist")',

                            beforeSend: function () {

                            },
                            success: function (result) {
                                $('#artist_DD').empty();
                                for (var i = 0; i < result.length; i++) {
                                    $('#artist_DD').append('<option value="' + result[i].ID + '">' + result[i].Name + '</option>')
                                }

                            },
                            complete: function () {
                            }
                        });

                       


                        $('#AlbumForm').submit(function (e) {
                            e.preventDefault();
                            $.ajax({
                                cache: false,
                                url: '@Url.Action("UpSertAlbum", "Album")',
                                type: "Post",
                                data: $(this).serialize(),
                                beforeSend: function () {
                                    $('.btn').prop("disabled", true);
                                },
                                success: function (myData) {
                                    bindList();
                                    $('#myModal').modal('hide');
                                },
                                complete: function () {
                                    $('.btn').prop("disabled", false);
                                }
                            });
                        });
                    }
                });
            }


        function bindList() {
               $.ajax({
                    cache: false,
                    url: '@Url.Action("_albumListPartial", "Album")',

                    beforeSend: function () {

                    },
                    success: function (result) {
                        $('#albumList').empty().append(result);
                    },
                    complete: function () {
                    }
            });
        }



    </script>


}

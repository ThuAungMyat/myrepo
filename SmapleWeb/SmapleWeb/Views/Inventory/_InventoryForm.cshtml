
@model  SampleWeb.Models.tbInventory
@using (Html.BeginForm("UpSertInventory", "Inventory", FormMethod.Post, new { id = "InventoryForm" }))
{
    <div class="modal-body" id="mb">

        <div class="row">
            <div class="form-group col-md-6">
                <label>Price</label><span class="text-danger">*</span>
                @Html.TextBoxFor(m => m.ItemPrice, new { type = "text", @class = "form-control", id = "txt_itemprice" })
            </div>
            <div class="form-group col-md-6">
                <label>Quantity</label><span class="text-danger">*</span>
                @Html.TextBoxFor(m => m.Qty, new { type = "text", @class = "form-control" })
            </div>
            <div class="form-group col-md-6">
                @{
                    var listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem {Text = "StockIn",Value ="1" });
                    listItems.Add(new SelectListItem { Text = "Justify", Value = "2" });
                 }
                <label>TransactionType</label><span class="text-danger">*</span>
                @Html.DropDownListFor(m => m.TransactionType,listItems )
            </div>
        </div>
    </div>

    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.IsDeleted)
    @Html.HiddenFor(m=>m.ItemName, new { id="hdItemName"})
    @Html.HiddenFor(m => m.ItemGUID, new { id = "hdItemGUID" })

    <div id="inventoryList"></div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" id=""><span class="icon-add"></span> Save</button>
    </div>

}



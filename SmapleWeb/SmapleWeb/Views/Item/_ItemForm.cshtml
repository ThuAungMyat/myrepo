
@model  SampleWeb.Models.tbItem
@using (Html.BeginForm("UpSertItem", "Item", FormMethod.Post, new { id = "ItemForm" }))
{
    <div class="modal-body" id="mb">

        <div class="row">

            <div class="form-group col-md-6">
                <label>Item</label><span class="text-danger">*</span>
                @Html.TextBoxFor(m => m.Item, new { type = "text", @class = "form-control" })
                @*,required = "required"*@ 
            </div>

            <div class="form-group col-md-6">
                <label>Code</label><span class="text-danger">*</span>
                @Html.TextBoxFor(m => m.Code, new { type = "text", @class = "form-control" })
            </div>

            <div class="form-group col-md-6">
                <label>Buying Price</label><span class="text-danger">*</span>
                @Html.TextBoxFor(m => m.BuyingPrice, new { type = "text", @class = "form-control" })
            </div>

            <div class="form-group col-md-6">
                <label>Selling Price</label><span class="text-danger">*</span>
                @Html.TextBoxFor(m => m.SellingPrice, new { type = "text", @class = "form-control" })
            </div>

            <div class="form-group col-md-6">
                <label>Description</label><span class="text-danger">*</span>
                @Html.TextBoxFor(m => m.Description, new { type = "text", @class = "form-control" })
            </div>


        </div>

    </div>

    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.IsDeleted)


    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" id=""><span class="icon-add"></span> Save</button>
    </div>
    <div id="itemList"></div>

}





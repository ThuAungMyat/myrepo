@model List<SampleWeb.Models.StockItemViewModel>

<table class="table">
    <thead>
        <tr>
            <th>
                Item Name
            </th>
            <th>
                Code
            </th>
            <th>
                Buying Price
            </th>
            <th>
               Selling Price
            </th>
            <th>
               Description
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                   @item.tbItem.Item
                </td>
                <td>
                    @item.tbItem.Code
                </td>
                <td>
                    @item.tbItem.BuyingPrice
                </td>
                <td>
                    @item.tbItem.SellingPrice
                </td>
                <td>
                    @item.tbItem.Description
                </td>
                <td>
                    <button class="btn btn-warning" data-itemID="@item.tbItem.ID" onclick="EditForm(this)">Edit</button>
                </td>
                <td>
                    <button class="btn btn-warning" data-itemID="@item.tbItem.ID" data-itemprice="@item.tbItem.BuyingPrice" data-itemguid="@item.tbItem.UniqueID" data-itemname="@item.tbItem.Item" onclick="InventoryForm(this)">Manage Stock</button>
                </td>
            </tr>
        }
    </tbody>
</table>
